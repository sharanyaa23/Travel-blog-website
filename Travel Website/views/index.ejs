<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/hero--image.jpg" width="607" height="510" class="d-block mx-lg-auto img-fluid" Loading="lazy" alt="travelling">
    </div>

<div class="col-12 col-lg-6">
    <h2 class="display-5 fw-bold mb-3">Your Ultimate Travel Companion</h2>
<p class="lead">
    Traveling-It leaves you speechless, then turns you into a storyteller. Explore more places with us and share your experience..
</p>
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a href="/explore-popular" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Popular</a>
    <a href="/explore-latest" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Latest</a>
</div>

</div>
</div>

<!---Popular start-->

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Popular Blogs </h2>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

      <% if(roam != '') { %>
        <% roam.pop.forEach(function(popularblog, index){ %>
        <a href="/popularblog/<%= popularblog._id %>" class="col text-center category__link">
            <div class="category__img category__img--large shadow">
                <img src="/uploads/<%= popularblog.image %>" alt="<%= popularblog.name %>" Loading="lazy">
            </div>
            <div class="pt-1"><%= popularblog.name %></div>
        </a>
        <% }) %>
      <% } %>
       
    </div>
</section>
<!--popular end-->



<!--latest start-->

<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Blogs</h2>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">

        <% if(ride != '') { %>
            <% ride.latest.forEach(function(latestblog, index){ %>
            <a href="/latestblog/<%= latestblog._id %>" class="col text-center category__link">
                <div class="category__img category__img--large shadow">
                    <img src="/uploads/<%= latestblog.image %>" alt="<%= latestblog.name %>" Loading="lazy">
                </div>
                <div class="pt-1"><%= latestblog.name %></div>
            </a>
            <% }) %>
            <% } %>
    </div>
</section>
<!--latest end-->

<section class="px-4 py-5 my-5 text-center">
    <img src="/img/publish.jpg" class="d-block mx-auto mb-4 img-fluid" alt="Publish your article" width="566" height="208" Loading="lazy">
    <h3 class="display-5 fw-bold">Publish your blog for FREE today</h3>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4">Post your experience infront of thousands of people for free.</p>
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a href="/submit-blog" class="btn btn-primary btn-dark btn-lg">Submit Blog</a>
        </div>
    </div>
</section>