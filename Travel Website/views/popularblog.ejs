<% if(popularblog != null) { %>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href = "/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- popularblog.name %></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-6">
            <img src="/uploads/<%- popularblog.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- popularblog.name %>" Loading="lazy">
        </div>
       
        <div class="col-12 col-md-6">
            <div class="row">
                <div class="col-12"><h1><%- popularblog.name %></h1></div>
                <div class="col-12" style="white-space: pre-line;"><%- popularblog.description %></div>
            </div>
        </div>

    </div>
<% } %>